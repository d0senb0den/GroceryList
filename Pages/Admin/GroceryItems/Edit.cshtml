@page
@model GroceryList.Pages.Admin.GroceryItems.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>GroceryItem</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="GroceryItem.ID" />
            <div class="form-group">
                <label asp-for="GroceryItem.Name" class="control-label"></label>
                <input asp-for="GroceryItem.Name" class="form-control" />
                <span asp-validation-for="GroceryItem.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GroceryItem.Amount" class="control-label"></label>
                <input asp-for="GroceryItem.Amount" class="form-control" />
                <span asp-validation-for="GroceryItem.Amount" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="GroceryItem.Purchased" /> @Html.DisplayNameFor(model => model.GroceryItem.Purchased)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="GroceryItem.UserID" class="control-label"></label>
                <input asp-for="GroceryItem.UserID" class="form-control" />
                <span asp-validation-for="GroceryItem.UserID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
